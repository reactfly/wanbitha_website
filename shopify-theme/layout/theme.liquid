<!doctype html>
<html lang="{{ request.locale.iso_code }}" class="no-js">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <title>
      {%- if page_title -%}
        {{ page_title }}
        {%- unless page_title contains shop.name %} â€” {{ shop.name }}{% endunless -%}
      {%- else -%}
        {{ shop.name }}
      {%- endif -%}
    </title>
    {%- if page_description -%}<meta name="description" content="{{ page_description | escape }}">{%- endif -%}
    <link rel="canonical" href="{{ canonical_url }}">
    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}
    <meta name="theme-color" content="{{ settings.color_background | default: '#0d0610' }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400..900;1,400..900&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    >
    {{ content_for_header }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>
  </head>
  <body class="template-{{ template.name | handle }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %}">
    {% render 'loading-screen' %}

    {%- comment -%} Noise Overlay {%- endcomment -%}
    <div class="noise-overlay" aria-hidden="true"></div>

    {%- comment -%} Universe Background (Deep Tunnel) {%- endcomment -%}
    <div class="universe-bg" aria-hidden="true">
      <div class="universe-fog"></div>
      <div class="universe-stars" id="stars-layer-1" data-speed="0.2"></div>
      <div class="universe-stars" id="stars-layer-2" data-speed="0.5"></div>
      <div class="universe-stars" id="stars-layer-3" data-speed="1.2"></div>
    </div>

    <a class="skip-to-content" href="#MainContent">{{ 'accessibility.skip_to_content' | t }}</a>

    {% sections 'header-group' %}

    <main id="MainContent" class="main-content" role="main">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    <!-- GSAP & Plugins (Premium Animations) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/Flip.min.js"></script>
    <script src="https://unpkg.com/lenis@1.0.45/dist/lenis.min.js"></script>

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    <script src="{{ 'interactions.js' | asset_url }}" defer></script>
  </body>
</html>
