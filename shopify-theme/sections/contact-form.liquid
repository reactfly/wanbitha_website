<section class="contact-section section-spacing" data-animate>
  <div class="container">
    <div class="text-center mb-48">
      {%- if section.settings.label != blank -%}
        <span class="label-tag mb-12" style="display: block;">{{ section.settings.label }}</span>
      {%- endif -%}
      <h2 class="heading-display heading-display--lg text-gradient">{{ section.settings.heading }}</h2>
      {%- if section.settings.description != blank -%}
        <p class="text-editorial" style="font-size: 1.1rem; margin-top: 12px;">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    {%- form 'contact' -%}
      {%- if form.posted_successfully? -%}
        <div class="glass-card text-center" style="padding: 40px; max-width: 600px; margin: 0 auto;">
          <p class="heading-display heading-display--sm text-gradient">Mensagem Enviada!</p>
          <p class="text-editorial" style="margin-top: 12px;">Obrigada pelo contato. Retornaremos em breve.</p>
        </div>
      {%- else -%}
        <div class="contact-form">
          {%- if form.errors -%}
            <div class="glass-card" style="padding: 16px; margin-bottom: 24px; border-color: var(--color-rose-hot);">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="form-group">
            <label for="ContactName">Nome</label>
            <input type="text" id="ContactName" name="contact[name]" value="{{ form.name }}" required>
          </div>

          <div class="form-group">
            <label for="ContactEmail">E-mail</label>
            <input type="email" id="ContactEmail" name="contact[email]" value="{{ form.email }}" required>
          </div>

          <div class="form-group">
            <label for="ContactPhone">Telefone</label>
            <input type="tel" id="ContactPhone" name="contact[phone]" value="{{ form.phone }}">
          </div>

          <div class="form-group">
            <label for="ContactMessage">Mensagem</label>
            <textarea id="ContactMessage" name="contact[body]" required>{{ form.body }}</textarea>
          </div>

          <button type="submit" class="btn btn--primary" style="width: 100%;">Enviar Mensagem</button>
        </div>
      {%- endif -%}
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Formulário de Contato",
  "tag": "section",
  "class": "section-contact",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Etiqueta",
      "default": "Contato"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Fale Conosco"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descrição",
      "default": "Tem interesse em uma obra? Deseja encomendar algo especial? Entre em contato."
    }
  ],
  "presets": [
    {
      "name": "Formulário de Contato"
    }
  ]
}
{% endschema %}
